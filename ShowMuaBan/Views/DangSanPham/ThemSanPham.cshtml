@using ShowMuaBan.Models
@model ShowMuaBan.ViewModels.DanhMucViewModel

@{
    ViewBag.Title = "Giao diện đăng sản phẩm của người dùng";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}


<div class="row">
    <div class="col-md-10">
        @using (Html.BeginForm("ThemSanPham", "DangSanPham"))
        {
            @Html.AntiForgeryToken()



                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.NhanHieu, new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.NhanHieu)
                        @Html.TextBoxFor(model => model.NhanHieu)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TenSanPham, new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.TenSanPham)
                        @Html.TextBoxFor(model => model.TenSanPham)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Date)
                        @Html.ValidationMessageFor(model => model.Date)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-5 col-md-5">
                        <input type="submit" value="Lưu lại" class="btn btn-default" />
                    </div>
                </div>

        }

    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}        




