@using ShowMuaBan.Models
@model ShowMuaBan.Models.DanhMuc


@{
    ViewBag.Title = "Giao diện đăng sản phẩm của người dùng";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}

@{ 
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/bootstrap.css"></script>
}

<div class="row">
    <div class="col-md-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.NhanHieu, new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.NhanHieu)
                        @Html.ValidationMessageFor(model => model.NhanHieu)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TenSanPham, new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.TenSanPham)
                        @Html.ValidationMessageFor(model => model.TenSanPham)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NgayDangSP, new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.NgayDangSP)
                        @Html.ValidationMessageFor(model => model.NgayDangSP)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-5 col-md-5">
                        <input type="submit" value="Lưu lại" class="btn btn-default" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>



